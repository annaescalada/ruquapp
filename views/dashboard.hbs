<img src="" class="logo" alt="Ruqu lost and found logo">
<a href="/profile">*</a>
<nav>
  <ul>
    <li class="lost">LOST</li>
    <li class="found">FOUND</li>
  </ul>
</nav>
<section class="lost">
{{#each lostDogs}}
  <ul>
    <li>{{name}}</li>
    <li>Colors:</li>
    {{#if color.white}}
      <li>White</li>
    {{/if}}
    {{#if color.black}}
      <li>Black</li>
    {{/if}}
    {{#if color.darkBrown}}
      <li>Dark Brown</li>
    {{/if}}
    {{#if color.lightBrown}}
      <li>Ligth Brown</li>
    {{/if}}
    {{#if color.red}}
      <li>Red</li>
    {{/if}}
    {{#if color.grey}}
      <li>Grey</li>
    {{/if}}

    <li>Size:</li>
    {{#if size.small}}
      <li>Small</li>
    {{/if}}
    {{#if size.medium}}
      <li>Medium</li>
    {{/if}}
    {{#if size.big}}
      <li>Big</li>
    {{/if}}

    <li>{{breed}}</li>

    <li>Ears:</li>
    {{#if ears.up}}
      <li>Up</li>
    {{/if}}
    {{#if ears.down}}
      <li>Down</li>
    {{/if}}

    <li>Tail:</li>
    {{#if tail.longTail}}
      <li>Long</li>
    {{/if}}
    {{#if tail.longHairy}}
      <li>Long and hairy</li>
    {{/if}}
    {{#if tail.shortTail}}
      <li>Short</li>
    {{/if}}

    <li>Hair:</li>
    {{#if hair.long}}
      <li>Long</li>
    {{/if}}
    {{#if hair.short}}
      <li>Short</li>
    {{/if}}
    
    <li>{{photo}}</li>
    <li>{{notification}}</li>
    <li>{{day}}</li>
    <li>{{month}}</li>
    <li>{{year}}</li>
    <li>{{hour}}</li>
    <li>{{location}}</li>
  </ul>
{{/each}}
</section>
<section class="found">

</section>

<section class="add-dog">
  <a href="/pet/add">+</a>
</section>